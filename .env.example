# Example environment variables for local development and deployment
# Rename to .env.local for local overrides (do NOT commit real secrets)

# Base URL used for OIDC redirect construction (optional)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Local auth cookie secret (change to a strong random value in production)
AUTH_COOKIE_SECRET=change_me_to_a_strong_random_value

# Abstracta (OIDC) provider settings - optional
ABSTRA_ISSUER=https://id.abstracta.us
ABSTRA_CLIENT_ID=your_client_id_here
ABSTRA_CLIENT_SECRET=your_client_secret_here
ABSTRA_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Read-only DB flag for Vercel deployments
DB_READ_ONLY=true
